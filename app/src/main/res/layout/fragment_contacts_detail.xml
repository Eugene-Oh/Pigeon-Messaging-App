<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--image view for contact-->

    <!--text view for displaying user name-->

    <ImageView
        android:id="@+id/image_contact_profile"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/primaryLightColor"
        android:padding="50dp"
        android:src="@drawable/ic_account_black_24dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="40dp" />

    <!--cardview for displaying user contact-->

    <TextView
        android:id="@+id/text_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_contact"
        android:padding="8dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="300dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_profile_name"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--image view for making a call -->

            <!--text view for displaying user contact-->

            <!--image view for displaying message icon-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_profile_phone"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:text="Phone"
        android:textColor="@color/secondaryTextColor"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="340dp" />



</androidx.constraintlayout.widget.ConstraintLayout>